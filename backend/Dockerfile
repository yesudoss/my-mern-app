# Use Node.js LTS version
FROM node:16

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Expose port 5000 (or whichever port your app uses)
EXPOSE 5000

# Start the server
CMD ["npm", "start"]
